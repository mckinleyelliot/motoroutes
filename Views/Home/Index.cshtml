@{
    ViewData["Title"] = "Home Page";
}
@model User
<h2>Register a new account</h2>
<a asp-action="SignIn" class="btn btn-warning" asp-controller="Home">SignIn</a><br>
<br>

<form asp-action="Register" asp-controller="Home" method="post">
    <label asp-for="FirstName"></label>
    <input asp-for="FirstName"><br>
    <label asp-for="LastName"></label>
    <input asp-for="LastName"><br>
    <label asp-for="Email"></label>
    <input asp-for="Email"><br>
    <label asp-for="Password"></label>
    <input asp-for="Password"><br>
    <label asp-for="ComparePassword"></label>
    <input asp-for="ComparePassword"><br>
    <input type="Submit" value="Register!" class="btn btn-danger">
</form>
<div asp-validation-summary="All" class="text-danger"></div>